{
  "name": "@saasfoundry/cli",
  "version": "0.0.0",
  "description": "CLI for SaaSFoundry",
  "main": "dist/index.js",
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "bin": {
    "sf": "./bin/sf.js",
    "saasfoundry": "./bin/sf.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "test": "jest",
    "format": "prettier --write .",
    "lint": "eslint --config eslint.config.mjs .",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build && npx husky install && find .husky -type f -exec chmod +x {} + && if [ -d './scripts' ]; then find ./scripts -type f -name '*.sh' -exec chmod +x {} +; fi",
    "link": "npm link --force",
    "unlink": "npm unlink -g @saasfoundry/cli && hash -r",
    "prepare": "husky"
  },
  "config": {
    "loglevel": "error"
  },
  "dependencies": {
    "@types/fs-extra": "11.0.4",
    "chalk": "4.1.2",
    "commander": "12.0.0",
    "fs-extra": "11.3.0",
    "inquirer": "^8.2.5",
    "module-alias": "2.2.3",
    "ora": "^5.4.1",
    "shelljs": "0.8.5",
    "simple-git": "3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@types/inquirer": "8.2.5",
    "@types/module-alias": "2.0.4",
    "@types/node": "22.14.0",
    "@types/shelljs": "0.8.12",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.3",
    "globals": "15.14.0",
    "husky": "8.0.0",
    "jest": "29.7.0",
    "prettier": "3.4.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0"
  },
  "overrides": {
    "glob": "7.2.3",
    "minimatch": "3.1.2",
    "rimraf": "3.0.2",
    "inflight": "1.0.6",
    "npmlog": "6.0.2",
    "gauge": "4.0.4",
    "are-we-there-yet": "2.0.0"
  }
}
